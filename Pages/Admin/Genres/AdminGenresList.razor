@page "/admin/genres"
@attribute [Authorize(Roles = "Admin")]
@layout TopBarLayout
@using BlazingBooks.Services
@inject GenreService GS

<div class="admin-genres-list">
    <h3>Genres</h3>
    <div class="container">
        @if (genres != null) {
            @foreach (var genre in genres)
            {
                <div class="small-genre-card">
                    <a href="/admin/genres/edit/@genre.Id">@genre.Name</a>
                    <button @onclick:stopPropagation="true" @onclick="@(() => RemoveGenre(genre))" class="btn-danger">x</button>
                </div>
            }
        }

        <a href="/admin/genres/add" class="add-genre">Add genre +</a>
    </div>
</div>

<style>
    .admin-genres-list {
        width: 100vw;
        height: 100%;
        max-height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    h3 {
        text-align: center;
    }

    .container {
        padding: 100px 150px;
        display: flex;
        gap: 30px;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        box-sizing: border-box;
        overflow-y: auto;
    }

    .small-genre-card {
        width: 180px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #d3d3d3;
    }

        .small-genre-card > a {
            color: black;
            text-decoration: none;
        }

            .small-genre-card > a:hover {
                color: black;
            }
</style>

@code {

    private List<Genre> genres;

    protected override async Task OnInitializedAsync()
    {
        genres = await GS.GetGenresReadOnly();
    }

    private void RemoveGenre(Genre genre)
    {
        GS.RemoveGenreAsync(genre).GetAwaiter().OnCompleted(async ()=>
        {
            genres = await GS.GetGenresReadOnly();
            StateHasChanged();
        });
    }
}
